extends layout 

block content
  title 
  h3=subTitle
  h4=questionTitle
  each item in questions
    li=item.question
  br
  h4 Add a new question:
  form(class="q-form")
    input(required type="textarea" placeholder="Add a new question" name="questionText" rows=10 cols=35)
    br
    input(required type="text" placeholder="Question choices (separate choice with commas)" name="optionText")
    br
    input(type="submit" formaction="/manage" formmethod="POST" name="addQuestion" value="Add Question")
  br

  form()
      input(type="submit" formaction="/" formmethod="POST" name="logout" value="Logout")
  br


